{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["vite/client"],
    "paths": {
      "@/*": ["./app/javascript/*"]
    },
    // allows us to use cla-vue-template which doesn't
    // have typescript definitions yet
    "allowJs": true,
    "noImplicitAny": false
  },
  "include": ["app/javascript"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
