<tr id='user-<%= member.id %>'>
  <td><%= member.user_full_name %></td>
  <% if member.email %>
      <td><%= member.email %></td>
  <% else %>
      <td><i><%= t('helpers.no_email') %> </i></td>
  <% end %>
  <td>
    <%= link_to t('.destroy', default: t('helpers.links.destroy')),
                group_member_path(@group, member),
                :method => :delete,
                :data => { confirm: t('.confirm-delete', default: t('helpers.links.confirm_delete', to_delete: member.user_full_name, default: t('helpers.links.confirm_default'))) },
                class: 'btn btn-xs btn-danger delete-group-member fa fa-trash-o', remote: true %>
  </td>
</tr>
