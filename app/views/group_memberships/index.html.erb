<%- model_class = User -%>
<div class="page-header">
  <h1><%= t '.title', :default => "#{@group.name} Members" %></h1>
</div>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Member Name</th>
    <th>Member ID</th>
    <th>Member Email</th>
    <th>Member created on</th>
    <th><%= t '.actions', :default => t("helpers.actions") %></th>
  </tr>
  </thead>
  <tbody>
  <% @members.each do |member| %>
      <%= render 'in_row_show', member: member, group: @group %>
  <% end %>
  <%= render 'in_row_form', group: @group %>
  </tbody>
</table>



<%= link_to t('.groups', :default => t("helpers.links.groups")),
            groups_path,
            :class => 'btn btn-primary btn-xs group' %>
