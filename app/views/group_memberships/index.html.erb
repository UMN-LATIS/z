<%- model_class = User -%>
<div class="page-header">
  <h1><%= t '.title', :default => "#{@group.name} Members" %></h1>
</div>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Member Name</th>
    <th>Member ID</th>
    <th>Is an Admin?</th>
    <th>Member created on</th>
    <th><%= t '.actions', :default => t("helpers.actions") %></th>
  </tr>
  </thead>
  <tbody>
  <% @members.each do |member| %>
      <%= render 'in_row_show', member: member, group: @group %>
  <% end %>

  </tbody>
</table>

<%= form_tag(new_group_member_path, :remote => true, :method => "get", id: "search-form") do %>
    <i>Add Someone</i>
    <%= text_field_tag :search, params[:search], placeholder: "Search People" %>
    <%= submit_tag t('search-users', :default => t("helpers.links.search-users")), :class => 'btn btn-primary btn-sm add-new-group-member' %>
<% end %>

<%= link_to t('.groups', :default => t("helpers.links.groups")),
            groups_path,
            :class => 'btn btn-primary group' %>
