<div id="search">
  <%= form_tag(group_members_path, remote: true, method: 'post', id: 'search-form', class: 'new_member') do %>
    <div class="input-wrapper">
      <%= label_tag :people_search, "Add Someone" %>
      <%= text_field_tag 'people_search', nil, class: 'form-control' %>
      <span id="searchHelpInline" class="text-muted">
        <%= t('helpers.placeholders.search_by_name_or_email') %>.
      </span>
      <span class="hidden glyphicon glyphicon-refresh glyphicon-refresh-animate" aria-hidden="true"></span>
      <%= hidden_field_tag 'uid' %>
    </div>
      <%= button_tag type: "submit", class: 'btn btn-primary add-new-group-member', :data => { confirm: t('.confirm', default: t('helpers.links.confirm_add_someone', default: 'Are you sure?')) } do %>
        <i class="fa fa-arrow-circle-left"></i>
        <%= t('search-users', :default => t('helpers.links.search_users')) %>
      <% end %>
  <% end %>
</div>
