<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4 class="modal-title" id="myModalLabel"><%= t('views.groups.new.title', url: display_keyword_url(params[:keyword]) )%></h4>
    </div>
    <%= form_for_group_admin @admin_view, @group do |f| %>

      <div class="modal-body">
          <div class="error-space"><%= @group.errors.full_messages.join('. ') %></div>

            <%= hidden_field_tag :modal, true %>
            <%= hidden_field_tag :new_identifier, @group_identifier %>
            <%= hidden_field_tag :keyword, params[:keyword] %>

              <%= f.label :name %>
              <%= f.text_field :name, class: 'form-control js-new-group-name', placeholder: t('views.groups.form.placeholders.name') %>
              <br/>

              <%= f.label :description %>
              <%= f.text_field :description, class: 'form-control js-new-group-description', placeholder: t('views.groups.form.placeholders.description') %>
              <br/>


      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal"><%= t('views.transfer_requests.new.cancel')%></button>
        <input type="submit" class="btn btn-primary" value="<%= t('views.groups.new.submit') %>" data-confirm="<%= t('views.groups.new.submit_confirm', url: display_keyword_url(params[:keyword]) ) %>" />
      </div>
    <% end %>

  </div>
</div>
