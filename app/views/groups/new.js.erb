<% if params[:modal] %>
  $("#index-modal").html($("<%= escape_javascript(render(partial: 'groups/new_modal')) %>"))
  $("#index-modal").modal()
<% else %>
  $("<%= escape_javascript(render(partial: 'groups/in_row_form', locals: { group: @group, group_identifier: @group_identifier })) %>").appendTo("table tbody");
  $('table tr#new-group-tip').remove();
<% end %>
