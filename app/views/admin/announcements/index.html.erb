<p id="notice"><%= notice %></p>

<h1>Admin Announcements</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Start delivering at</th>
      <th>Stop delivering at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_announcements.each do |admin_announcement| %>
      <tr>
        <td><%= admin_announcement.title %></td>
        <td><%= admin_announcement.body %></td>
        <td><%= admin_announcement.start_delivering_at %></td>
        <td><%= admin_announcement.stop_delivering_at %></td>
        <td><%= link_to 'Show', admin_announcement %></td>
        <td><%= link_to 'Edit', edit_admin_announcement_path(admin_announcement) %></td>
        <td><%= link_to 'Destroy', admin_announcement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

