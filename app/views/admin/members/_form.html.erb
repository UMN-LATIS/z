<div id="search">
    <%= form_tag(admin_members_path, remote: true, method: 'post', id: 'search-form', class: 'new_admin') do %>
      <div class="input-wrapper new-admin-wrapper">
        <%= label_tag :people_search, t('views.admin.members.index.form.add_someone') %>
        <%= text_field_tag 'people_search', nil, class: 'form-control' %>
        <span id="searchHelpInline" class="text-muted">
          <%= t('views.admin.members.index.form.help') %>.
        </span>
        <span class="hidden glyphicon glyphicon-refresh glyphicon-refresh-animate" aria-hidden="true"></span>
        <%= hidden_field_tag 'uid' %>
      </div>
        <%= submit_tag t('views.admin.members.index.form.submit'), class: 'btn btn-primary add-new-group-member', :data => { confirm: t('.confirm', default: t('helpers.links.confirm_add_someone', default: 'Are you sure?')) } %>
  <% end %>
</div>
