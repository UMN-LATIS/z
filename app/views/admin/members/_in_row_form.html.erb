<tr id="search">
  <td colspan=5>
    <%= form_tag(admin_members_path, :remote => true, :method => 'post', id: 'search-form') do %>
        <div class="title">
          <%= t '.title', :default => t('helpers.links.add_someone') %>
        </div>
        <div class="form-group people-search">
          <%= text_field_tag 'people_search', nil, class: 'form-control', :placeholder => t('helpers.placeholders.search_by_name_or_email')  %>
          <%= hidden_field_tag 'uid' %>
        </div>
        <%= submit_tag t('search-users', :default => t('helpers.links.search_users')), :class => 'btn btn-primary btn-xs add-new-group-member', :data => { confirm: t('.confirm', default: t('helpers.links.confirm_add_someone', default: 'Are you sure?')) } %>
  <% end %>
  </td>
</tr>
