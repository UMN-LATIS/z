<%- model_class = Url -%>

<div id="new-url-form" class="z-hero z-hero-dimmer">
  <%= render 'sleek_form', url: @url %>
</div>

<div class="collection_select_spot"></div>
<div class="urls-table-container">
  <div id="anouncements">
    <%= render :partial => "announcements/starburst/announcement_bootstrap" %>
  </div>
  <div id="pending-transfer-requests-to">
    <%= render 'transfer_requests_to' %>
  </div>

  <div id="pending-transfer-requests-from">
    <%= render 'transfer_requests_from' %>
  </div>

  <div class="urls-table-title">
    <%= t('views.urls.index.table.title') %>
  </div>
  <table id="urls-table" class="table user-table table-striped table-bordered data-table" data-source="<%= datatable_urls_path(format: :json) %>">
    <thead>
      <tr>
        <th></th>
        <th></th>
        <th class="urls-table-header-short-url"><%= t('views.urls.index.table.shorturl') %></th>
        <th class="urls-table-header-long-url"><%= t('views.urls.index.table.longurl')  %></th>
        <th data-toggle="tooltip" data-container="body" title="<%= t('views.urls.index.table.collection_header_tooltip') %>"><%= t('views.urls.index.table.collections') %><i class=" fa fa-info-circle"></i></th>
        <th data-toggle="tooltip" data-container="body" title="<%= t('views.urls.index.table.clicks_header_tooltip') %>"><%= t('views.urls.index.table.clicks') %><i class=" fa fa-info-circle"></i></th>
        <th><%= t('views.urls.index.table.created') %></th>
        <th><%= t('views.urls.index.table.actions') %></th>
      </tr>
    </thead>
    <tbody>
    </tbody>
  </table>
</div>

<%= content_tag :div, class: "route-info", data: {new_transfer_request_path: new_transfer_request_path, new_move_to_group_path: new_move_to_group_path} do %>
<% end %>

<%= content_tag :div, class: "collection-count", data: {collection_count: current_user.groups.length} do %>
<% end %>

<%= content_tag :div, class: "collection-names", data: {collection_names: current_user.groups.collect{ |group| [group.id, display_name(group)]}} do %>
<% end %>

<%= render 'modal' %>
