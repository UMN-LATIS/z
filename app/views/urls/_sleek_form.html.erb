<% is_edit = (defined?(edit) && edit == true) ? true : false %>
<div class="z-hero-content tw-relative tw-z-10 tw-text-white tw-max-w-screen-lg tw-mx-auto">
  <div class="tw-max-w-[90rem] tw-mx-auto">
    <h3 class="tw-text-2xl tw-mb-4">
      <%= is_edit ? t('views.urls.sleek_form.edit.title') : t('views.urls.sleek_form.new.title') %>
    </h3>
    <%= form_for_url_admin @admin_view, url do |f| %>
      <div class="super-input tw-grid tw-grid-cols-2 tw-gap-4 tw-bg-white tw-rounded-md tw-text-umn-neutral-700">
        <div class="focus-within:tw-ring-offset-2 focus-within:tw-ring">
          <%= f.text_field :url, class: 'js-new-url-url tw-w-full tw-h-full tw-border-none tw-bg-transparent tw-text-umn-neutral-900', placeholder: t('views.urls.sleek_form.placeholders.url'), 'aria-label': 'source URL' %>
        </div>
        <div class="super-input-right tw-flex tw-items-center tw-gap-2">
          <div class="keyword-static-text tw-font-semibold tw-text-umn-neutral-700">
            <%= t('views.urls.sleek_form.domain') %>
          </div>
          <div class="keyword-input tw-flex-1 focus-within:tw-ring focus-within:tw-ring-offset-2">
            <%= f.text_field :keyword, class: 'js-new-url-keyword tw-border-none tw-w-full tw-bg-transparent tw-text-umn-neutral-900 tw-h-full', placeholder: t('views.urls.sleek_form.placeholders.keyword'), 'aria-label': 'keyword' %>
          </div>
          <button type="submit" class="js-url-submit tw-block !tw-bg-umn-gold tw-py-4 tw-px-8 tw-rounded-r-md !active:tw-bg-umn-gold-light focus:tw-ring focus:tw-ring-offset-2">
            <%= is_edit ? t('views.urls.sleek_form.edit.submit') : t('views.urls.sleek_form.new.submit')  %>
          </button>
        </div>
      </div>
      <% if is_edit %>
        <a href="#" class='btn btn-default cancel-edit'><%= t('views.urls.sleek_form.edit.cancel')%></a>
      <% end %>
      <div id="url-blurb-container">
      </div>
    <% end %>
    <%= render 'urls/in_row_errors', url: url %>
  </div>
</div>
