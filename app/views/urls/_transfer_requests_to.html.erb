<% if @pending_transfer_requests_to.present? %>
    <div class="bs-callout bs-callout-primary" id="callout-badges-ie8-empty">
      <h4>You have pending transfer requests</h4>
      <p>
        <% @pending_transfer_requests_to.each do |transfer_request| %>
        <div class="trasnfer-request-item">
          <%= transfer_request.urls.map(&:keyword).join(',') %>
          <a href="<%= transfer_request_path(transfer_request) %>" data-method="delete" data-confirm="Are you sure you want to reject these URLs?" class='btn btn-default btn-xs js-reject-transfer'>Reject</a>
          <a href="<%= confirm_transfer_request_path(transfer_request) %>" data-method="post" class='btn btn-primary btn-xs js-approve-transfer'>Approve</a>
        </div>
        <% end %>
      </p>
    </div>
<% end %>
