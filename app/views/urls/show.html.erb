<%- model_class = Url -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:url) %>:</strong></dt>
  <dd><%= @url.url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:keyword) %>:</strong></dt>
  <dd><%= @url.keyword %></dd>
  <dt><strong><%= model_class.human_attribute_name(:total_clicks) %>:</strong></dt>
  <dd><%= @url.total_clicks %></dd>
  <dt><strong><%= model_class.human_attribute_name(:group_id) %>:</strong></dt>
  <dd><%= @url.group_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:modified_by) %>:</strong></dt>
  <dd><%= @url.modified_by %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              urls_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_url_path(@url), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              url_path(@url),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
